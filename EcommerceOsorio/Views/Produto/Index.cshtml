
@{
    Layout = null;
    DateTime data = ViewBag.Data;
    List<EcommerceOsorio.Models.Produto> produtos = ViewBag.Produtos; 
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Gerenciamento de Produtos</title>
</head>
<body>
    <h1>Gerenciamento de Produtos</h1>
    @*<a href="~/Views/Cadastrar">Cadastrar Produto</a>*@


    @* Link em MVC | Razor *@
    @Html.ActionLink("Cadastrar Produto", "CadastrarProduto", "Produto")


    <div> 
    </div>

    @data

    @foreach (var produto in produtos)
    {
        <p>Nome: @produto.NomeProduto</p>
        <p>Descrição: @produto.DescricaoProduto</p>
        <p>Preço: @produto.PrecoProduto</p>
        <p>Categoria: @produto.CategoriaProduto</p><br>
    }
</body>
</html>
