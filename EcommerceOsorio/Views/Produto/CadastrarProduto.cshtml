
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadastrar Produto</title>
</head>
<body>
    <h1>Cadastrar Produto</h1>
    <div> 
        @Html.Label("Nome do produto")
        @Html.TextBox("txtNome")<br><br>

        @Html.Label("Descrição do produto")
        @Html.TextBox("txtDescricao")<br><br>

        @Html.Label("Preço do produto")
        @Html.TextBox("txtPreco")<br><br>

        @Html.Label("Categoria do produto")
        @Html.TextBox("txtCategoria")<br><br>

        <input type="submit" value="Cadastrar" />
    </div>
</body>
</html>
