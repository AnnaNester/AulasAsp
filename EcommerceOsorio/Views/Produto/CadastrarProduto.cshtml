
@{
    @model EcommerceOsorio.Models.Produto
}

    <div>
        
       @using (Html.BeginForm("CadastrarProduto", "Produto", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
       {
        <fieldset>
            <legend>Cadastrar Produto</legend>
            @Html.ValidationSummary(true, null, new { @class = "text-danger"})
            <div class="form-group">
                @Html.LabelFor(model => model.NomeProduto, new { @class = "control-label col-sm-2" })
                <div class="control-label col-sm-5">
                    @Html.TextBoxFor(model => model.NomeProduto, new { @class = "form-control", @placeholder = "Nome do produto" })<br>
                    @Html.ValidationMessageFor(model => model.NomeProduto, null, new { @class = "text-danger"})
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.DescricaoProduto, new { @class = "control-label col-sm-2" })
                <div class="control-label col-sm-5">
                    @Html.TextBoxFor(model => model.DescricaoProduto, new { @class = "form-control", @placeholder = "Descrição do produto" })<br>
                    @Html.ValidationMessageFor(model => model.DescricaoProduto, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.PrecoProduto, new { @class = "control-label col-sm-2" })
                <div class="control-label col-sm-5">
                    @Html.TextBoxFor(model => model.PrecoProduto, new { @class = "form-control", @placeholder = "Preço do produto" })<br>
                    @Html.ValidationMessageFor(model => model.PrecoProduto, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CategoriaProduto, new { @class = "control-label col-sm-2" })
                <div class="control-label col-sm-5">
                    @Html.DropDownList("Categorias", null, " -- SELECIONE -- ", new { @class = "form-control" })<br>
                    @Html.ValidationMessageFor(model => model.CategoriaProduto, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Imagem do produto", new { @class = "control-label col-sm-2" })
                <div class="control-label col-sm-5">
                    <input type="file" name="fupImagem" class="form-control-file"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                </div>
            </div>
        </fieldset>
       }
    </div>